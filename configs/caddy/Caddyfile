# Auto-scaling webhook endpoint for GitHub Actions runners
runners.{$DOMAIN} {
	reverse_proxy runner-webhook:3000 {
		header_up X-Real-IP {remote_host}
	}
	
	# Only allow GitHub webhook IPs (if needed)
