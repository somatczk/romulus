# Homeserver Infrastructure Environment Configuration
# Copy this file to .env and fill in your values

TZ=America/New_York
PUID=1000
PGID=1000

# Domain configuration for Cloudflare
DOMAIN=yourdomain.com

# Storage paths (adjust based on your mount points)
NVME_PATH=/mnt/nvme
SSD_PATH=/mnt/ssd
HDD_PATH=/mnt/hdd

# Required for automatic DNS updates and SSL certificates
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id_here
CLOUDFLARE_EMAIL=your_email@example.com

# MariaDB root password (generate secure password)
MYSQL_ROOT_PASSWORD=your_secure_mysql_root_password
# TeamSpeak database password
TS3SERVER_DB_PASSWORD=your_secure_teamspeak_db_password
# Monitoring database user password (for MariaDB exporter)
MONITORING_DB_PASSWORD=your_secure_monitoring_db_password
# Backup database user password
BACKUP_DB_PASSWORD=your_secure_backup_db_password

# Redis password (optional but recommended)
REDIS_PASSWORD=your_secure_redis_password

# Plex claim token (get from https://plex.tv/claim)
PLEX_CLAIM=claim-your_plex_claim_token_here

# qBittorrent WebUI password
QBITTORRENT_PASSWORD=your_secure_qbittorrent_password

# CS2 Server configuration
CS2_SERVER_NAME="Your CS2 Server"
CS2_RCON_PASSWORD=your_secure_rcon_password
CS2_SERVER_PASSWORD=""  # Leave empty for public server
STEAM_TOKEN=your_steam_game_server_token

# TeamSpeak server admin password
TS3_SERVER_ADMIN_PASSWORD=your_secure_ts3_admin_password

# Grafana admin password
GF_SECURITY_ADMIN_PASSWORD=your_secure_grafana_password

# Authelia configuration
AUTHELIA_JWT_SECRET=your_64_char_jwt_secret_here
AUTHELIA_SESSION_SECRET=your_64_char_session_secret_here
AUTHELIA_STORAGE_ENCRYPTION_KEY=your_32_char_encryption_key_here

# Optional: Authelia database password (if using MariaDB instead of SQLite)
# AUTHELIA_DB_PASSWORD=your_secure_authelia_db_password

# Optional: OpenID Connect configuration for Authelia
# AUTHELIA_OIDC_HMAC_SECRET=your_64_char_oidc_hmac_secret
# AUTHELIA_OIDC_PRIVATE_KEY=your_rsa_private_key_here
# GRAFANA_OIDC_CLIENT_SECRET=your_grafana_oidc_secret

# Notification settings (Discord webhook URL for alerts)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_here

# Optional: Email notifications (SMTP configuration)
# SMTP_USER=your_smtp_username
# SMTP_PASSWORD=your_smtp_password
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587

# Optional: Remote Prometheus for long-term storage
# REMOTE_PROMETHEUS_PASSWORD=your_remote_prometheus_password

# Cloud storage for backups (choose one)
# Backblaze B2
B2_ACCOUNT_ID=your_b2_account_id
B2_ACCOUNT_KEY=your_b2_account_key
B2_BUCKET_NAME=homeserver-backups

# Alternative: AWS S3
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# S3_BUCKET_NAME=homeserver-backups
# AWS_REGION=us-west-2

# Backup encryption key (generate 32-character key)
BACKUP_ENCRYPTION_KEY=your_32_char_backup_encryption_key

# External IP for services (usually auto-detected)
# EXTERNAL_IP=your.external.ip.address

# Port configurations (defaults shown, modify if needed)
PLEX_PORT=32400
QBITTORRENT_PORT=8080
GRAFANA_PORT=3000
PROMETHEUS_PORT=9090
TEAMSPEAK_VOICE_PORT=9987
TEAMSPEAK_QUERY_PORT=10011
TEAMSPEAK_FILES_PORT=30033
CS2_PORT=27015
CS2_RCON_PORT=27025

# Container resource limits (adjust based on your hardware)
PLEX_MEMORY_LIMIT=8g
PLEX_CPU_LIMIT=6
CS2_MEMORY_LIMIT=4g
CS2_CPU_LIMIT=4
MARIADB_MEMORY_LIMIT=2g
REDIS_MEMORY_LIMIT=256m

# Log levels (debug, info, warn, error)
LOG_LEVEL=info

# Update schedules (cron format)
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
UPDATE_CHECK_SCHEDULE="0 6 * * 0"  # Weekly on Sunday at 6 AM

# Self-hosted runner configuration for CI/CD
GITHUB_REPOSITORY=yourusername/yourrepo
GITHUB_RUNNER_TOKEN=your_github_runner_registration_token

# Runner configuration
RUNNER_NAME=homeserver-runner
RUNNER_GROUP=default
RUNNER_EPHEMERAL=false

# Runner resource limits
RUNNER_MEMORY_LIMIT=2g
RUNNER_MEMORY_RESERVATION=1g
RUNNER_CPU_LIMIT=2.0

# Project path (absolute path to this repository on the host)
PROJECT_PATH=/path/to/your/homeserver/repo

# Set to true for development mode (disables some security features)
DEVELOPMENT_MODE=false

# Enable additional debug logging
DEBUG_LOGGING=false